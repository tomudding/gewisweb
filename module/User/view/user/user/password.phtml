<?php
$this->headTitle($this->translate('Change password'));
?>
<section class="section py-4">
    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card mb-3">
                    <div class="text-center m-4">
                        <h4 class="card-title m-0"><?= $this->translate('Change password') ?></h4>
                    </div>
                    <?php if (isset($success) && $success): ?>
                        <p class="card-text w-100 px-4 mb-4"><?= $this->translate('Password changed successfully') ?></p>
                    <?php else: ?>
                        <?php
                        $form->prepare();

                        $form->setAttribute('action', $this->url('user/default', ['action' => 'password']));
                        $form->setAttribute('method', 'post');

                        $form->setAttribute('role', 'form');
                        $form->setAttribute('class', 'form-password w-100 p-4 pt-0');
                        ?>

                        <?= $this->form()->openTag($form) ?>
                            <?php foreach (['old_password', 'password', 'password_verify'] as $field): ?>
                                <?php
                                $element = $form->get($field);
                                $element->setAttribute('id', $field)
                                        ->setAttribute('class', 'form-control' . (count($element->getMessages()) > 0 ? ' is-invalid' : ''))
                                        ->setAttribute('placeholder', $element->getLabel());
                                ?>
                                <div class="form-label-group mb-2">
                                    <?= $this->formInput($element) ?>
                                    <label for="<?= $element->getAttribute('id') ?>"><?= $element->getLabel() ?></label>
                                    <?= $this->formElementErrors($element, array('class' => 'invalid-feedback')); ?>
                                </div>
                            <?php endforeach; ?>

                            <?php
                            $submit = $form->get('submit');
                            $submit->setAttribute('class', 'btn btn-lg btn-primary btn-block');
                            ?>
                            <?= $this->formSubmit($submit); ?>
                        <?= $this->form()->closeTag(); ?>
                    <?php endif; ?>
                </div>
            </div>
        </div>
    </div>
</section>
